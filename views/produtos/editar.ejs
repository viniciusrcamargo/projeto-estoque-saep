<%- include('../layouts/header.ejs', { titulo: 'Edição de Produto' }) %>

<div class="produtos-container">
  <h2>Edição do produto <%= p.nome_produto %></h2>
  <form method="POST" action="/produtos/editar/<%= p.id_produto %>" class="form-cadastro-produto">
    <div class="form-row">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" value="<%= p.nome_produto%>" required>
    </div>
    <div class="form-row">
      <label for="estoque_minimo">Estoque Mínimo:</label>
      <input type="number" id="estoque_minimo" name="estoque_minimo" value="<%= p.estoque_minimo%>" min="0" required>
    </div>
    <div class="form-row">
      <label for="quantidade">Quantidade:</label>
      <input type="number" id="quantidade" name="quantidade" value="<%= p.quantidade%>" min="0" required>
    </div>
    <button type="submit" class="botao-cadastro">Cadastrar</button>
    <a href="/produtos/listar" class="botao-voltar">Voltar à lista</a>
  </form>
</div>

<%- include('../layouts/footer.ejs') %>